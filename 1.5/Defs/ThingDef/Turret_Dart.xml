<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--=============== dart launcher - area denial - level 1===============-->
  <ThingDef ParentName="BuildingBase">
    <defName>EMTurretDart</defName>
    <label>dart trap</label>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/WoodTurret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>2500</WorkToBuild>
      <Mass>100</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <uiIconPath>Things/Building/Trap_Icon</uiIconPath>
    <comps>
    </comps>
    <description>A rudimentary dart trap possessed of some limited intelligence through manipulation of mechanites. Hard to hit a single target with but great for crowds and area denial.</description>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <WoodLog>25</WoodLog>
      <I_EMBlood>2</I_EMBlood>
      <I_EMMechanismS>3</I_EMMechanismS>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>22</specialDisplayRadius>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_EMTurretDart</turretGunDef>
      <turretBurstCooldownTime>0.5</turretBurstCooldownTime>
    </building>
    <designationHotKey>Misc2</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>MM_Adv</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_EMTurretDart</defName>
    <label>dart</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>2</damageAmountBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="Ancient_BaseHumanGun">
    <defName>Gun_EMTurretDart</defName>
    <label>dart trap</label>
    <graphicData>
      <texPath>Things/Building/TurretBow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Jury-rigged gun attached to a turret.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0</generateCommonality>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <weaponTags>
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EMTurretDart</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>22</range>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>Bow_Small</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <!-- <forcedMissRadius>2</forcedMissRadius> -->
      </li>
    </verbs>
  </ThingDef>
