<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="EMMM_BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <statBases>
      <SellPriceFactor>0.50</SellPriceFactor>
    </statBases>
  </ThingDef>
  <!-- excavation -->
  <ThingDef ParentName="EMMM_BuildingBase">
    <defName>EM_Excavation</defName>
    <label>Excavation</label>
    <thingClass>Building_WorkTable</thingClass>
    <description>Designated spot where ancient mechanisms and lost technology is recovered.</description>
    <graphicData>
      <texPath>Things/Building/Excavation</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(5,5)</drawSize>
    </graphicData>
    <costList>
      <WoodLog>150</WoodLog>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <statBases>
      <WorkToBuild>1000</WorkToBuild>
    </statBases>
    <useHitPoints>False</useHitPoints>
    <size>(5,5)</size>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <researchPrerequisites>
      <li>MM_Basic</li>
    </researchPrerequisites>
    <!--
		<recipes>
			
		</recipes>
-->
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>
  <!-- technology bench -->
