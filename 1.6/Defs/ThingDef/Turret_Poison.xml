<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="Ancient_BaseHumanGun" ParentName="BaseWeaponTurret" Abstract="True">
    <weaponTags>
      <li>AncientGuns</li>
    </weaponTags>
  </ThingDef>
  <!--=============== poison launcher - aoe - level 1===============-->
  <ThingDef ParentName="BuildingBase">
    <defName>EMTurretGoop</defName>
    <label>acid launcher</label>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Catapult</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2.5,2.5)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>2500</WorkToBuild>
      <Mass>100</Mass>
      <Beauty>-30</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <uiIconPath>Things/Building/Goop_Icon</uiIconPath>
    <comps>
    </comps>
    <description>A turret possessed of basic intelligence through manipulation of mechanites. Fires streams of acidic material, on contact with this acidic material the target is slowed. This is unsurprisingly very painful for them. Has a minimum range.</description>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <costList>
      <WoodLog>25</WoodLog>
      <I_EMBlood>7</I_EMBlood>
      <PsychoidLeaves>25</PsychoidLeaves>
      <I_EMMechanismL>2</I_EMMechanismL>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>7</specialDisplayRadius>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretBurstCooldownTime>6</turretBurstCooldownTime>
      <turretGunDef>Gun_EMTurretGoop</turretGunDef>
    </building>
    <designationHotKey>Misc2</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>MM_Turret</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_EMTurretGoop</defName>
    <label>acidic goop</label>
    <graphicData>
      <texPath>Things/Item/Weapon/PRock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>30</speed>
      <damageDef>EM_Goop</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <explosionRadius>4</explosionRadius>
      <flyOverhead>false</flyOverhead>
      <ai_IsIncendiary>false</ai_IsIncendiary>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="Ancient_BaseHumanGun">
    <defName>Gun_EMTurretGoop</defName>
    <label>acid launcher</label>
    <graphicData>
      <texPath>Things/Building/GoopBow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Jury-rigged gun attached to a turret.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0</generateCommonality>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>4.0</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <weaponTags>
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EMTurretGoop</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>35</range>
        <soundCast>Bow_Small</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <forcedMissRadius>3</forcedMissRadius>
        <minRange>7</minRange>
      </li>
    </verbs>
  </ThingDef>
</Defs>
