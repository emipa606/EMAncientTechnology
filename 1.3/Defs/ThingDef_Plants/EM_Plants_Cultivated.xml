<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--=========================== Food crops ==============================-->
  <ThingDef ParentName="RoughPlantBase">
    <defName>EM_PlantGourd</defName>
    <label>bottle gourd plant</label>
    <description>Tough, inedible, squash-like vegetable that when hollowed out makes a great air and water tight container for things you need to keep fresh - like blood.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Nutrition>0.18</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/RicePlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>EM_RawGourd</harvestedThingDef>
      <harvestYield>2</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowResearchPrerequisites>
        <li>MM_Basic</li>
      </sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <growDays>5</growDays>
      <visualSizeRange>0.3~0.8</visualSizeRange>
    </plant>
  </ThingDef>
</Defs>
