<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--=============== fear totem - affliction damage - level 1===============-->
  <ThingDef ParentName="BuildingBase">
    <defName>EMTurretSkull</defName>
    <label>fearful effigy</label>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/RocksTurret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>2500</WorkToBuild>
      <Mass>100</Mass>
      <Beauty>-20</Beauty>
    </statBases>
    <uiIconPath>Things/Building/Effigy_Icon</uiIconPath>
    <tickerType>Normal</tickerType>
    <comps>
    </comps>
    <description>An aura surrounds this effigy and strikes targets with fears and panic to drive them away. A menacing image stands on the top and watches those who pass by.</description>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Stony</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <WoodLog>25</WoodLog>
      <I_EMSkull>1</I_EMSkull>
      <I_EMBlood>3</I_EMBlood>
      <I_EMMechanismS>2</I_EMMechanismS>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>30</specialDisplayRadius>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_EMTurretSkull</turretGunDef>
      <turretBurstCooldownTime>5.15</turretBurstCooldownTime>
    </building>
    <designationHotKey>Misc2</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>MM_Adv</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_EMTurretSkull</defName>
    <label>fearful aura</label>
    <graphicData>
      <texPath>Things/Item/Weapon/SkullFlash</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>EM_Fear</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <speed>25</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="Ancient_BaseHumanGun">
    <defName>Gun_EMTurretSkull</defName>
    <label>terrifying skull</label>
    <graphicData>
      <texPath>Things/Building/Skull2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>The skull of a humanoid used as a fearsome trophy.</description>
    <soundInteract>EM_SkullTurretSound</soundInteract>
    <generateCommonality>0</generateCommonality>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>0.7</AccuracyShort>
      <AccuracyMedium>0.5</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <weaponTags>
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EMTurretSkull</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>30</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
        <soundCast>EM_SkullTurretSound</soundCast>
        <soundCastTail>EM_SkullTurretSound</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
